@model QLTHPT.Models.QUANHUYEN

@{
    ViewBag.Title = "Create";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>Tạo Mới</strong></h4>

                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                        }
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group-inner">
                                    <div class="form-group-inner" style="text-align: left;">
                                        @Html.LabelFor(model => model.QH_MA, "Mã Quận Huyện", htmlAttributes: new { @class = "control-label " })
                                        @Html.EditorFor(model => model.QH_MA, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.QH_MA, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group-inner" style="text-align: left;">
                                        @Html.LabelFor(model => model.QH_TEN, "Tên Quận Huyện", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.QH_TEN, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.QH_TEN, "", new { @class = "text-danger" })
                                    </div>

                                  <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Tạo" class="btn btn-default" /> |
                                        <a href="@Url.Action("Index", "QUANHUYENs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>

                                    </div>
                                </div>
                            </div>
                           
                     </div>
               </div>
           </div>
        </div>
     </div>
   </div>
</div>