@model QLTHPT.Models.CANBO

@{
    ViewBag.Title = "Delete";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4>
                                <strong>
                                    Xóa
                                </strong>
                            </h4>

                        </div>
                    </div>
                    <h5>Bạn có chắc muốn xóa ?</h5>
                    <div class="sparkline10-graph">
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã CB
                                        </th>
                                        <th>
                                            Họ Tên
                                        </th>
                                        <th>
                                            Giới Tính
                                        </th>
                                        <th>
                                            Địa Chỉ
                                        </th>
                                        <th>
                                            CMND
                                        </th>
                                        <th>
                                            Cơ Quan
                                        </th>
                                        <th>
                                            Kỷ Luật
                                        </th>
                                        <th>
                                            Khen Thưởng
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_HOTEN)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_GIOITINH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_DIACHI)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_CMND)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.COQUAN_CQ_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.KYLUATCB_KLCB_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.KHENTHUONGCB_KTCB_MA)
                                        </td>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        <a href="@Url.Action("Index", "CANBOes")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
    </div>
}