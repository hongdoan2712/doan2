@model QLTHPT.Models.CHITIET_CHUCVU

@{
    ViewBag.Title = "Edit";
}

    <div class="data-table-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="sparkline13-list shadow-reset">
                        <div class="sparkline13-hd">
                            <div class="main-sparkline13-hd">
                                <h4><strong>Chỉnh Sửa</strong></h4>
                            </div>
                        </div>
                        <div class="sparkline13-graph">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.CT_CV_ID)
                                    <div class="form-group-inner" style="text-align: left;">
                                        @Html.LabelFor(model => model.CT_CV_ID, "Mã", htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.CT_CV_ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.CT_CV_ID, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group-inner" style="text-align: left;">
                                        @Html.LabelFor(model => model.CHUCVU_CV_MA, "Chức Vụ", htmlAttributes: new { @class = "control-label" })
                                            @Html.DropDownList("CHUCVU_CV_MA", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CHUCVU_CV_MA, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group-inner" style="text-align: left;">
                                        @Html.LabelFor(model => model.CANBO_CB_MA, "Cán Bộ", htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.CANBO_CB_MA, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CANBO_CB_MA, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group" style="text-align: left;">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Lưu" class="btn btn-default" />
                                            <a href="@Url.Action("Index", "CHITIET_CHUCVU")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>