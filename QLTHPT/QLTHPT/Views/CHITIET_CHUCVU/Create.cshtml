                                        <a href="@Url.Action("Index", "CHITIET_CHUCVU", new { id = ViewBag.ChucVu.CV_MA})" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                        <a href="@Url.Action("Index", "CANBOes", new { id = ViewBag.CanBo.CB_MA})" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>