@model QLTHPT.Models.THIETBIGIANGDAY

@{
    ViewBag.Title = "Edit";
}

    <div class="data-table-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="sparkline13-list shadow-reset">
                        <div class="sparkline13-hd">
                            <div class="main-sparkline13-hd">
                                <h4><strong>Chỉnh Sửa</strong></h4>
                                <div class="sparkline13-outline-icon">
                                    <span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                    <span class="sparkline13-collapse-close"><i class="fa fa-times"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="sparkline13-graph">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.TBGD_MA)
                                    <div class="form-group-inner" style="text-align: left;">
                                        @Html.LabelFor(model => model.TBGD_MA, "Mã", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.TBGD_MA, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.TBGD_MA, "", new { @class = "text-danger" })
                                    <div class="form-group-inner">
                                        @Html.LabelFor(model => model.TBGD_MA, "Mã", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.TBGD_MA, new { htmlAttributes = new { @class = "form-control",  @readonly = "readonly" } })
                                            <br />
                                            @Html.ValidationMessageFor(model => model.TBGD_MA, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group-inner" style="text-align: left;">
                                    @Html.LabelFor(model => model.TBGD_TEN, "Tên Thiết Bị", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.TBGD_TEN, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TBGD_TEN, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group" style="text-align: left;">
                                    <div style=" padding-left: 15px;">
                                        <input type="submit" value="Tạo" class="btn btn-default" /> |
                                        <a href="@Url.Action("Index", "THIETBIGIANGDAYs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>