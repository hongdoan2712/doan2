@model QLTHPT.Models.LOP

@{
    ViewBag.Title = "Edit";
}

    <div class="data-table-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="sparkline13-list shadow-reset">
                        <div class="sparkline13-hd">
                            <div class="main-sparkline13-hd">
                                <h4><strong>Chỉnh Sửa</strong></h4>

                            </div>
                        </div>
                        <div class="sparkline13-graph">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.LOP_MA)
                                <div class="form-group-inner" style="text-align: left;">
                                    @Html.LabelFor(model => model.LOP_MA, "Mã", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.LOP_MA, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.LOP_MA, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group-inner" style="text-align: left;">
                                    @Html.LabelFor(model => model.LOP_TEN, "Tên", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.LOP_TEN, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LOP_TEN, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group" style="text-align: left;">
                                    <div style=" padding-left: 15px;">
                                        <input type="submit" value="Lưu" class="btn btn-default" /> |
                                        <a href="@Url.Action("Index", "LOPs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
