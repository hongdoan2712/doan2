@model QLTHPT.Models.THONGTINDAOTAO

@{
    ViewBag.Title = "Create";
}

 <div class="data-table-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="sparkline13-list shadow-reset">
                        <div class="sparkline13-hd">
                            <div class="main-sparkline13-hd">
                                <h4><strong>Tạo Mới</strong></h4>
                            </div>
                        </div>
                        <div class="sparkline13-graph">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="col-md-6" style="text-align: left;">
                                        @Html.LabelFor(model => model.TTDT_MA, "Mã ", htmlAttributes: new { @class = "control-label " })
                                        @Html.EditorFor(model => model.TTDT_MA, new { htmlAttributes = new { @class = "form-control" }, @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => model.TTDT_MA, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6" style="text-align: left;">
                                        @Html.LabelFor(model => model.HINHTHUCs_HT_MA, "Hình Thức", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownList("HINHTHUCs_HT_MA", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.HINHTHUCs_HT_MA, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6" style="text-align: left;">
                                        @Html.LabelFor(model => model.CHUYENNGANH_CN_MA, "Chuyên Ngành", htmlAttributes: new { @class = "control-label " })
                                        @Html.DropDownList("CHUYENNGANH_CN_MA", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CHUYENNGANH_CN_MA, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6"style="text-align: left;">
                                        @Html.LabelFor(model => model.VANBANG_VB_MA, "Văn Bằng", htmlAttributes: new { @class = "control-label " })
                                        @Html.DropDownList("VANBANG_VB_MA", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.VANBANG_VB_MA, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-12" style="text-align: left;">
                                        @Html.LabelFor(model => model.CANBO_CB_MA, "Cán Bộ", htmlAttributes: new { @class = "control-label " })
                                        @Html.DropDownList("CANBO_CB_MA", null, htmlAttributes: new { @class = "form-control" })
                                        <br/>
                                        @Html.ValidationMessageFor(model => model.CANBO_CB_MA, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group" style="text-align: left;">
                                        <div style=" padding-left: 30px;">
                                            <input type="submit" value="Tạo" class="btn btn-default" /> |
                                            <a href="@Url.Action("Index", "THONGTINDAOTAOs", new { id = ViewBag.CanBo.CB_MA})" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
