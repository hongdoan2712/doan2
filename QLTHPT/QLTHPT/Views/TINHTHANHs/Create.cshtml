@model QLTHPT.Models.TINHTHANH

@{
    ViewBag.Title = "Create";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>Tạo Mới</strong></h4>

                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group-inner" style="text-align: left;">
                                @Html.LabelFor(model => model.TT_MA, "Mã Tỉnh Thành", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.TT_MA, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.TT_MA, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group-inner" style="text-align: left;">
                                @Html.LabelFor(model => model.TT_TEN, "Tên Tỉnh Thành", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.TT_TEN, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TT_TEN, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group" style="text-align: left;">
                                <div style=" padding-left: 15px;">
                                    <input type="submit" value="Tạo" class="btn btn-default" /> |
                                    <a href="@Url.Action("Index", "TINHTHANHs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>

                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
